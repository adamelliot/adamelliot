      %h3 description:
      %textarea{:name => 'description'}
      %h3 tags:
      %input{:type => 'text', :name => 'tags'}
      %h3 posted:
      %select.posted_on{:name => 'posted_on_month'}
        - (1..12).each do |month|
          %option{:value => month - 1}= Date::MONTHNAMES[month]
      %select.posted_on{:name => 'posted_on_day'}
        - (1..31).each do |day|
          %option{:value => day}= day
      %select.posted_on{:name => 'posted_on_year'}
        - 4.times do |i|
          %option{:value => Date.today.year - i + 1}= Date.today.year - i + 1
      %input{:name => 'draft', :type => 'checkbox'}
      %label{:for => 'draft'} draft
      %input{:name => 'closed', :type => 'checkbox'}
      %label{:for => 'closed'} comments closed

