#templates
  .shared
    .frame
      .close.button close
      .block
      .toolbar
      .frameChase

    .error
      %h2.title Error
      .message Uh oh...

    .notice
      %h2.title Warning
      .message Are you sure you want to eat that?

  .post.index
    .row
      .date
      %h1.title
      .description

  .post.show
    .date
    %h1.title
    .body
    .comments.disqus_thread

  .post.form
    %form
      %input{:type => 'hidden', :name => 'id'}
      %h3 title:
      %input{:type => 'text', :name => 'title'}
      %h3 body:
      %textarea{:name => 'markdown'}
      %h3 tags:
      %input{:type => 'text', :name => 'tags'}
      %h3 posted:
      %select{:name => 'posted_on_month'}
        - (1..12).each do |month|
          %option{:value => month - 1}= Date::MONTHNAMES[month]
      %select{:name => 'posted_on_day'}
        - (1..31).each do |day|
          %option{:value => day}= day
      %select{:name => 'posted_on_year'}
        - 4.times do |i|
          %option{:value => Date.today.year - i + 1}= Date.today.year - i + 1
      %input{:name => 'draft', :type => 'checkbox'}
      %label{:for => 'draft'} draft
      %input{:name => 'closed', :type => 'checkbox'}
      %label{:for => 'closed'} comments closed

  .toy.index
    .row
      .date
      %h1.title
      .description

  .toy.show
    .date
    %h1.title
    %canvas{:width => 300, :height => 190}
    .clear
    .controls
      .control
        %span ?
        .label fps
      .control
        %span ◼
        .label stop
      .control
        %span ►
        .label play
    .clear
    
    .comments.disqus_thread

  .toy.form
    %form
      %input{:type => 'hidden', :name => 'id'}
      %h3 title:
      %input{:type => 'text', :name => 'title'}
      %h3 javascript:
