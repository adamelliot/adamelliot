  .post.show.scroll
    .date
    %h1.title
    .body

  .post.form
    %form
      %input.id{:type => 'hidden', :name => 'id'}
      %h3 title:
      %input.title{:type => 'text', :name => 'title', :value => ''}
      %h3 body:
      %textarea.markdown{:name => 'markdown'}
      %h3 tags:
      %input.tags{:type => 'text', :name => 'tags'}
      %h3 posted:
      %select.posted_on{:name => 'posted_on_month'}
        - (1..12).each do |month|
          - if month == Date.today.month
            %option{:value => month, :selected => 'selected'}= Date::MONTHNAMES[month]
          - else
            %option{:value => month}= Date::MONTHNAMES[month]
      %select.posted_on{:name => 'posted_on_day'}
        - (1..31).each do |day|
          - if day == Date.today.day
            %option{:value => day, :selected => 'selected'}= day
          - else
            %option{:value => day}= day
      %select.posted_on{:name => 'posted_on_year'}
        - 3.times do |i|
          - if i == 0
            %option{:value => Date.today.year - i, :selected => 'selected'}= Date.today.year - i
          - else
            %option{:value => Date.today.year - i}= Date.today.year - i

  .session.form
